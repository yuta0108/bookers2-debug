<div class='container'>
  <h1>Follow Users</h1>
  <div class="row">
    <div class='col'>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th colspan="3"></th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size: '100x100' %></td>
              <td></td>
              <td></td>
              <td></td>
              <td><%= user.name %></td>
              <td></td>
              <td></td>
              <td></td>
              <td>フォロー数: <%= user.followers.count %></td>
              <td></td>
              <td>フォロワー数: <%= user.followeds.count %></td>
              <td></td>
              <td></td>
              <td></td>
              <td><%= link_to 'Show', user %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


