<table class='table'>
  <tr><%= image_tag user.get_profile_image, size: '100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user.followers.count, user_followers_path(user)%></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followeds.count, user_followeds_path(user)%></th>
  </tr>
</table>

<div class='row'>
  <% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <% if user.is_followed_by?(current_user) %>
      <%= link_to user_relationship_path(user), method: :delete do %>
        <button class= "btn btn-primary">フォローを外す</button>
      <% end %>
    <% else %>
      <%= link_to user_relationship_path(user), method: :post do %>
        <button class= "btn btn-success">フォロー</button>
      <% end %>
    <% end %>
  <% end %>
</div>